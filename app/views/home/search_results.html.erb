<div class="row">
	<div class="col-lg-12">
		<div style="text-align: center">
			<h1><%= @total_count %> 検索結果があります！</h1>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-lg-12">		
		<% @selected_scenes.each do |scene| %>

			<% @cities.each do |city| %>
			<% if @shared_info[scene].length > 0 %>

			<h2 colspan="18">検索条件:&nbsp;東京都&nbsp;<%= city %></h2>
				<h3><%= scene %></h3>
				<table class="table table-striped table-borderless">
					<tr>
						<th rowspan="3">シーン</th>
						<th rowspan="3">一般名称/</br>自治体の呼称</th>
						<th rowspan="3">運営/申請窓口</th>
						<th rowspan="3">保障額・内容</th>
						
							<th colspan="18"><%= city %></th>
						<% end %>	
						<tr>
							<!-- エリア -->
							<% @cities.each do |city| %>
							<!-- 基本情報 -->
							<th colspan="2">年齢</th>
							<th colspan="2">性別</th>
							<!-- カテゴリ -->
							<th colspan="9">対象者</th>
							<th colspan="5">対象</th>
							<tr>
								<!-- 年齢 -->
								<th>年齢(以上)</th>
								<th>年齢(以下)</th>
								<!-- 性別 -->
								<th>女</th>
								<th>男</th>
								<!-- 対象者 子供と大人 -->
								<th>子供(1)乳児"</th>
								<th>子供(2)就学前、保育園、幼稚園</th>
								<th>子供(3)小学生</th>
								<th>子供(4)中学生</th>
								<th>子供(5)高校生</th>
								<th>子供(6)高校生以上、20歳未満</th>
								<th>大人(1)</th>
								<th>高齢者(1)前期高齢者対象</th>
								<th>高齢者(2)後期高齢者対象</th>
								<!-- 対象 -->
								<th>ひとり親</th>
								<th>妊婦(産前産後)</th>
								<th>要介護者</th>
								<th>障がい者</th>
								<th>住宅・店舗</th>
							</tr>

							<% end %>
						</tr>
					</tr>
					<% (0...@shared_info[scene].length).each do |row| %>
						<tr>											
							<td><%= @shared_info[scene][row]["シーン種別(1)"] %>	</td>
							<td><%= @shared_info[scene][row]["一般名称（今後増えてきたものにする）"]%></td>
							<td>東京都/居住区の自治体</td>
							<td><%= @shared_info[scene][row]["保障額・内容"][0,10]%>
								<%= link_to name = '詳細', controller:"home", action:"show_details", id:@shared_info[scene][row]["id"]%>
							</td>
							<% @cities.each do |city| %>
								<% city_data = @area_info_by_scene[scene][row][city] %>
								<td><%= city_data["年齢(以上)"]%></td>
								<td><%= city_data["年齢(以下)"]%></td>
								<td><%= city_data["女"]%></td>
								<td><%= city_data["男"]%></td>
								<td><%= city_data["子供(1)乳児"]%></td>
								<td><%= city_data["子供(2)就学前、保育園、幼稚園"]%></td>
								<td><%= city_data["子供(3)小学生"]%></td>
								<td><%= city_data["子供(4)中学生"]%></td>
								<td><%= city_data["子供(5)高校生"]%></td>
								<td><%= city_data["子供(6)高校生以上、20歳未満"]%></td>
								<td><%= city_data["大人(1)20歳-65歳"]%></td>
								<td><%= city_data["高齢者(1)前期高齢者対象"]%></td>
								<td><%= city_data["高齢者(2)後期高齢者対象"]%></td>
								<td><%= city_data["ひとり親"]%></td>
								<td><%= city_data["妊婦(産前産後)"]%></td>
								<td><%= city_data["要介護者"]%></td>
								<td><%= city_data["障がい者"]%></td>
								<td><%= city_data["住宅・店舗"]%></td>
							<% end %>
						</tr>
					<% end%>
				</table>
			<% end %>
		<% end %>
	</div>
</div>