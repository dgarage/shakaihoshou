<%= render 'layouts/header_2'%>
<div class=" container">
<div class="row">
	<div class="col-lg-8">
		
		<table class="table table-striped table-borderless">
			<% @available_cities.each_slice(4) do |slice| %>
				<tr>
					<% slice.each do |city| %>
						<td>
							
							<%= link_to city, action: 'search_by_scene_step3',  search_criteria: @search_criteria.update({"0" => city}) %>
						</td>
					<% end %>
				</tr>
			<% end %>
			</table>
	</div>
</div>
</div>