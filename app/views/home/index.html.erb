<div class="row">
	<div class="col-lg-8">
		
			<%= bootstrap_form_tag url: 'search_by_area' do |f| %>
			<table class="table table-striped table-borderless">
				<% @cities.each_slice(4) do |slice| %>
					<tr>
						<% slice.each do |city| %>
							<td>
								<%= check_box :selected_city, city%> <%= city %>
							</td>
						<% end %>
					</tr>
				<% end %>
				<tr>
					<td><%= f.submit "検索", class: "btn btn-success" %></td>
				</tr>
				</table>
			<% end %>
		
	</div>
</div>

