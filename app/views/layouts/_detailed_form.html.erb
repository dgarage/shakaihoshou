<div class="page-search" id="search-option">


	<h2><span class="glyphicon-s icon-list"></span><span class="city">絞り込みオプション</span>を<span class="search">指定して検索</span></h2>
<p>詳細情報を指定してください。（複数選択可）</p>

	<script type="text/javascript">
	$( document ).ready(function() {
    	
    	$('.scene_checkbox').click(function(){
    		var checked = false;
    		$('.scene_checkbox').each(function(a, b) {
          if ($(b).is(':checked')) {
            checked = checked | true;
          } else {
            checked = checked | false;
          }
    		});
    		if (checked == true){
    			$("#btn_detailed_submit").attr("disabled", false);
    		} else{
    			$("#btn_detailed_submit").attr("disabled", true);
    		}	
    	});
    	
	});
</script>



    <%= bootstrap_form_tag url: 'detailed_search', method:'get' do |f| %>
    <table class="table table-striped table-borderless">
        <tr>
          <td class="title"><strong>市・区</strong></td>
          <td>
            <%= select_tag "city", options_for_select(@all_cities) %>

          </td>
        </tr>

        <tr>
          <td><strong>シーン</strong></td>
          <td>
            <ul class="list_check">
            <% @all_scenes.each do |scene| %>
              <% name = "scene[" + scene + "]" %>
              <li><%= check_box_tag name, 1, true, {id:scene, class:"scene_checkbox"} %> <label for="<%= name %>"><%= scene %></label></li>
            <% end %>
            </ul>
          </td>
        </tr>

 				<tr>
					<td><strong>性別</strong></td> 
					
					<td>
						<%= select_tag :gender,  options_for_select(['女', '男'	])%> <br/>
					</td>
				</tr>

				<tr>
					<td><strong>対象者</strong></td> 
					
					<td>
						<ul class="list_check2">
						<% @targets.each do |target| %>
              <% name = "target[" + target + "]" %>
              <li><%= radio_button_tag name, target, true, id:target  %> <label for="<%= name %>"><%= target %></label></li>
						<% end %>
						</ul>
					</td>
				</tr>
				<tr>
					<td><strong>状態</strong></td> 
					<td>
						<ul class="list_check">
						<% @situations.each do |situation| %>
              <% name = "situation[" + situation + "]" %>
              <li><%= check_box_tag name, situation, false, {id:situation, value:0} %> <label for="<%= name %>"><%= situation %></label></li>
						<% end %>
						</ul>
					</td>
				</tr>
			</table>				
			<div>
				<p class="text-center"><%= f.submit "検索", class: "btn btn-success", id:'btn_detailed_submit', disabled:true %></p>
			</div>

		<% end %>		

</div>

