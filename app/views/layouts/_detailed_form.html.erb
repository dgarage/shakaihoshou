<div class="row">
	<div class="col-lg-8">
		<%= bootstrap_form_tag url: 'detailed_search', method:'get' do |f| %>
		<table class="table table-striped table-borderless">
				<tr>
					<td><strong>シーン</strong></td>
					<td>
						<%= select_tag "city", options_for_select(@all_cities)
 %>

					</td>
				</tr>

				<tr>
					<td><strong>シーン</strong></td>
					<td>
						<% @all_scenes.each do |scene| %>
							<%= check_box :scene, scene %>  <%= scene %>
						<% end %>
					</td>
				</tr>
 
				<tr>
					<td><strong>対象</strong></td> 
					
					<td>
						<%= select_tag :gender,  options_for_select(['女', '男'	])%> <br/>
						<% @targets.each do |target| %>
							<%= check_box :target, target%>  <%= target %>
						<% end %>
					</td>
				</tr>
				<tr>
					<td><strong>状態</strong></td> 
					<td>
						<% @situations.each do |situation| %>
							<%= check_box :situation, situation%>  <%= situation %>
						<% end %>
					</td>
				</tr>
				
			<tr>
				<td><%= f.submit "検索", class: "btn btn-success" %></td>
			</tr>
			</table>
		<% end %>		
	</div>
</div>