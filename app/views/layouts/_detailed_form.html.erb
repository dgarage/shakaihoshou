<div class="page-search" id="search-option">

	<h2><span class="glyphicon-s icon-list"></span><span class="city">絞り込みオプション</span>を<span class="search">指定して検索</span></h2>
  <p>詳細情報を指定してください。（複数選択可）</p>

  <%= javascript_include_tag "detailed_form" %>

    <%= bootstrap_form_tag url: 'detailed_search', method:'get' do |f| %>
    <table class="table table-striped table-borderless">
        <tr>
          <td class="title"><strong>市・区</strong></td>
          <td>
            <%= select_tag "city", options_for_select(@all_cities) %>

          </td>
        </tr>

        <tr>
          <td><strong>シーン</strong></td>
          <td>
            <ul class="list_check">
            <% @all_scenes.each do |scene| %>
              <% scene_name = "scene[" + scene + "]" %>
              <li><%= check_box :scene, scene, {id:scene_name, class:"scene_checkbox", checked:true} %> <label for="<%= scene_name %>"><%= scene %></label></li>
            <% end %>
            </ul>
          </td>
        </tr>

 				<tr>
					<td><strong>性別</strong></td> 
					
					<td>
						<%= select_tag :gender,  options_for_select(['女', '男'	])%> <br/>
					</td>
				</tr>

				<tr>
					<td><strong>対象者</strong></td> 
					
					<td>
						<ul class="list_check2">
            <% index = 1 %>
						<% @targets.each do |target| %>
              <% target_name = "target[" + target + "]" %>
              <% i = (index == 1) ? true : false %>
              <li><%= radio_button_tag :target, target, i, id:target_name  %> <label for="<%= target_name %>"><%= target %></label></li>
              <% index += 1 %>
						<% end %>
						</ul>
					</td>
				</tr>
				<tr>
					<td><strong>状態</strong></td> 
					<td>
						<ul class="list_check">
						<% @situations.each do |situation| %>
              <% situation_name = "situation[" + situation + "]" %>
              <li><%= check_box :situation, situation, {id:situation_name} %> <label for="<%= situation_name %>"><%= situation %></label></li>
						<% end %>
						</ul>
					</td>
				</tr>
			</table>				
			<div>
				<p class="text-center"><%= f.submit "検索", class: "btn btn-success", id:'btn_detailed_submit', disabled:false %></p>
			</div>

		<% end %>		

</div>
