<div class="row">
	<div class="col-lg-8">
		<%= bootstrap_form_tag url: 'search_by_area', method:'get' do |f| %>
		<table class="table table-striped table-borderless">
			<% @all_cities.each_slice(4) do |slice| %>
				<tr>
					<% slice.each do |city| %>
						<td>
							<%= check_box :selected_city, city%> 
							<%= link_to city, action: 'search_by_area',  selected_city: {city => 1} %>
						</td>
					<% end %>
				</tr>
			<% end %>
			<tr>
				<td><%= f.submit "検索", class: "btn btn-success" %></td>
			</tr>
			</table>
		<% end %>
	</div>
</div>
